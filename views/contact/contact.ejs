<%- include('../header.ejs')%>
<%- include('../partials/flash.ejs')%>
<div class="pb-2 mt-2 mb-4 border-bottom">
  <h3>Contact Form</h3>
</div>
<form method="POST"><input type="hidden" name="_csrf" />
  <% if(unknownUser){%>
  <div class="form-group row"><label class="col-md-2 col-form-label font-weight-bold" for="name">Name</label>
    <div class="col-md-8"><input class="form-control" type="text" name="name" id="name" autocomplete="name"
        autofocus="autofocus" required="required" /></div>
  </div>
  <div class="form-group row"><label class="col-md-2 col-form-label font-weight-bold" for="email">Email</label>
    <div class="col-md-8"><input class="form-control" type="email" name="email" id="email" autocomplete="email"
        required="required" /></div>
  </div>
  <%}%>
  <div class="form-group row"><label class="col-md-2 col-form-label font-weight-bold" for="message">Please describe the
      issue or your suggestion</label>
    <div class="col-md-8"><textarea class="form-control" name="message" id="message" rows="7" autofocus="true"
        required="required"></textarea></div>
  </div>
  <div class="form-group">
    <div class="offset-md-2 col-md-8 p-1"><button class="btn btn-primary" type="submit"><i
          class="far fa-envelope fa-sm"></i>Send</button></div>
  </div>
</form>

<%- include('../footer.ejs')%>